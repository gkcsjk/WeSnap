<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_story_my"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/size_edges_small" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/story_image_my"
            android:background="@color/colorTransparentBlack"
            android:contentDescription="@string/desc_image_story"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/story_time_my"
            android:text="@string/hint_time_ago"
            android:layout_alignBottom="@+id/story_image_my"
            android:textAlignment="gravity"
            android:gravity="bottom|start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/size_edges_small"
            android:textAppearance="?android:textAppearanceListItem"
            android:textColor="@color/colorWhite"
            android:background="@color/colorTransparentBlack" />
    </RelativeLayout>

</android.support.v7.widget.CardView>

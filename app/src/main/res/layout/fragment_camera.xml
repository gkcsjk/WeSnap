<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".fragment.CameraFragment" >

    <!-- Start Camera Button -->
    <Button
        android:id="@+id/button_start_camera"
        android:text="@string/action_camera"
        android:drawableTop="@drawable/ic_action_camera"
        android:drawablePadding="@dimen/size_edges_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:layout_marginTop="@dimen/size_spaces"/>

    <!-- View Memories Button -->
    <Button
        android:id="@+id/button_my_memories"
        android:text="@string/action_my_memories"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:drawableStart="@drawable/ic_action_view_memories"
        android:drawablePadding="@dimen/size_edges_small"
        style="@style/Widget.AppCompat.Button.Borderless" />
</LinearLayout>
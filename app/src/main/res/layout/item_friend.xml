<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/size_edges">

    <ImageView
        android:id="@+id/friend_avatar"
        android:contentDescription="@string/desc_image_avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="@dimen/size_avatar"
        android:layout_height="@dimen/size_avatar"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_default_avatar" />

    <TextView
        android:id="@+id/friend_name"
        android:text="@string/hint_chat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/friend_avatar"
        android:layout_toEndOf="@+id/friend_avatar"
        android:layout_marginLeft="@dimen/size_edges"
        android:layout_marginStart="@dimen/size_edges"
        android:textAppearance="?android:textAppearanceListItem"
        android:textStyle="bold" />
</RelativeLayout>

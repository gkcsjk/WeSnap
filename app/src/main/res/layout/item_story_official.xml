<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="@dimen/size_card_height"
    android:layout_height="@dimen/size_card_height"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/size_edges_small"
    android:layout_marginLeft="@dimen/size_edges_small"
    android:layout_marginRight="@dimen/size_edges_small"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/story_image"
            tools:src="@drawable/a"
            android:background="@color/colorGreyDark"
            android:contentDescription="@string/desc_image_story"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_photo_message"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/story_title"
            android:layout_alignBottom="@+id/story_image"
            tools:text="@string/text_story_title"
            android:textAlignment="gravity"
            android:gravity="bottom|start"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_photo_message"
            android:layout_margin="@dimen/size_edges_small"
            android:textAppearance="?android:textAppearanceLargeInverse"/>

        <TextView
            android:id="@+id/story_text"
            android:layout_below="@+id/story_image"
            tools:text="@string/text_dummy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_edges_small"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorGreyDark" />

        <Button
            android:id="@+id/action_read_story"
            android:layout_below="@+id/story_text"
            android:text="@string/action_read_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="?attr/colorPrimary" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
